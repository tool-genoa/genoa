#!/bin/bash
module purge
module load slurm
module load intel/compiler/64/2019/19.0.5
module load openmpi/intel/64/4.0.5
module load hdf5/parallel/intel/1.12.0
module load netcdf/netcdf-c/intel/4.7.4
module load netcdf/netcdf-f/intel/4.5.3



source ${FORTRAN_INTEL_ROOT}/bin/compilervars.sh intel64
source ${C_INTEL_ROOT}/bin/compilervars.sh intel64

export my_netcdf_fortran_lib=${NETCDFFORTRAN_LIBDIR}
export my_netcdf_fortran_inc=${NETCDFFORTRAN_INCDIR}
export my_netcdf_fortran_bin=${NETCDFFORTRAN_EXEDIR}
export my_hdf5_lib=${HDF5_LIBDIR}
export my_netcdf_c_lib=${NETCDFC_LIBDIR}
export my_netcdf_c_inc=${NETCDFC_INCDIR}
export my_netcdf_c_bin=${NETCDFC_EXEDIR}

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:${my_netcdf_c_lib}:${my_netcdf_fortran_lib}

export my_hdr=Makefile.hdr.intel
export FC=${FORTRAN_INTEL_ROOT}/bin/intel64/ifort

